<UserControl x:Class="WindowsPerformanceMonitor.Startup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Loaded="OnControlLoaded"
             >
    <Grid ShowGridLines="False" Height="Auto" Width="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="8.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListView ItemsSource="{Binding startupListView}" SelectedItem="{Binding startupProcessListView, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="20,10,20,10" x:Name="listView_StartupList">
            <ListView.View>
                <GridView x:Name="listView_gridView">
                    <GridViewColumn Header="Name" 
                                    Width="350"
                                    DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Publisher" 
                                    Width="250"
                                    DisplayMemberBinding="{Binding Publisher}"/>
                    <GridViewColumn Header="Status" 
                                    Width="130"
                                    DisplayMemberBinding="{Binding Status}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
